              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/user/profile">Profile</a>
                <form id="logout-form" action="/user/signout" method="POST" style="display: none;"></form>
                <a class="dropdown-item" href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Signout</a>
              </div>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
